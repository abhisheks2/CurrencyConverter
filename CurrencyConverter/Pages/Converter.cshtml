@page "/"
@model ConverterModel

<form method="post">
    <div class="row m-3">
        <div class="col-sm-7">
            <div class="card">
                <div class="card-header text-center bg-primary">
                    <h2><b>Currency Converter</b></h2>
                </div>
                <div class="card-body text-left">
                    <div class="form-group row">
                        <label asp-for="CurrencyConversion.FromCurrency" class="col-sm-3 col-form-label"></label>
                        <select class="form-control col-sm-7" asp-for="CurrencyConversion.FromCurrency"
                                asp-items="Html.GetEnumSelectList<Currency>()">
                            <option value="" selected>Please select a Currency</option>
                        </select>
                        <span asp-validation-for="CurrencyConversion.FromCurrency" class="col-sm-7 offset-sm-3 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CurrencyConversion.FromAmount" class="col-sm-3 col-form-label"></label>
                        <input asp-for="CurrencyConversion.FromAmount" placeholder="Please enter amount for conversion" class="col-sm-7 form-control" />
                        <span asp-validation-for="CurrencyConversion.FromAmount" class="col-sm-7 offset-sm-3 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CurrencyConversion.ToCurrency" class="col-sm-3 col-form-label"></label>
                        <select class="form-control col-sm-7" asp-for="CurrencyConversion.ToCurrency"
                                asp-items="Html.GetEnumSelectList<Currency>()">
                            <option value="" selected>Please select a Currency</option>
                        </select>
                        <span asp-validation-for="CurrencyConversion.ToCurrency" class="col-sm-7 offset-sm-3 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CurrencyConversion.ToAmount" class="col-sm-3 col-form-label"></label>
                        <input asp-for="CurrencyConversion.ToAmount" disabled class="col-sm-7 form-control" />
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Convert</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}